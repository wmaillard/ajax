html
  body
    table.table.table-striped
      thead
        tr
          th Name
          th Favorite Website
          th Favorite Icecream
          th Animals I Like
          th Email
      tbody
        each recordKey in records
          tr(id=recordKey.recordNumber)
            td.name 
              =recordKey.fName
            td.website 
              =recordKey.website
            td.icecream 
              =recordKey.icecream
            td.animals 
              each animal in recordKey["animals"]
                =animal + " "
            td.email 
              =recordKey.email
            td
              button.edit.btn.btn-warning(type='button') Edit
            td
              button.delete.btn.btn-danger(type='button') Delete
          tr

